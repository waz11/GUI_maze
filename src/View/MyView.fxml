<BorderPane onKeyPressed="#KeyPressed" stylesheets="View.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New" fx:id="btn_newMaze" onAction="#generateMaze" />
                                <MenuItem mnemonicParsing="false" text="Save" fx:id="btn_saveMaze" onAction="#saveMaze" />
                                <MenuItem mnemonicParsing="false" text="Load" fx:id="btn_loadMaze" onAction="#loadMaze" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options"  >
                            <items>
                                <MenuItem mnemonicParsing="false" fx:id="btn_options" onAction="#Options" text="Options" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Exit" />
                        <Menu mnemonicParsing="false" text="Help" />
                        <Menu mnemonicParsing="false" text="About">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#About" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

            </children>
        </VBox>
    </top>

    <left>
        <VBox prefHeight="299.0" prefWidth="171.0" spacing="5.0" style="-fx-background-color: deepskyblue" BorderPane.alignment="CENTER">
            <children>
                <GridPane prefHeight="210.0" prefWidth="201.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.0" minWidth="10.0" prefWidth="99.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="101.0" minWidth="10.0" prefWidth="101.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtfld_rowsNum" disable="false" text="10" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="txtfld_columnsNum" disable="false" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button fx:id="btn_generateMaze" onAction="#generateMaze" prefHeight="25.0" prefWidth="204.0" text="Generate Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font></Button>
                    <Button fx:id="btn_solveMaze" disable="true" alignment="CENTER" cancelButton="true" onAction="#solveMaze" prefHeight="25.0" prefWidth="219.0" text="Solve Maze" GridPane.columnSpan="2" GridPane.rowIndex="5">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font></Button>
                    <!--<Label GridPane.columnIndex="1" GridPane.rowIndex="4" text="${controller.characterPositionRow}" />-->
                    <!--<Label GridPane.columnIndex="1" GridPane.rowIndex="5" text="${controller.characterPositionColumn}"/>-->
                    <!--                    <ChoiceBox value="2 minutes" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="2 minutes" />
                                                    <String fx:value="5 minutes" />
                                                    <String fx:value="15 minutes" />
                                                </FXCollections>
                                            </items>
                                        </ChoiceBox>-->
                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>





    <center>
        <Pane style="-fx-background-color: whitesmoke; -fx-border-color: black" BorderPane.alignment="CENTER">
            <children>
                <MazeDisplayer fx:id="mazeDisplayer" height="600" imageFileNameCharacter="resources/Images/player.png" imageFileNameGoal="resources/Images/goal.png" imageFileNameSolution="resources/Images/solution.png" imageFileNameWall="resources/Images/border.png" layoutY="5.0" onMouseClicked="#mouseClicked" style="-fx-border-color: black;                                -fx-border-width: 12px solid;                                -fx-background-color: white;" width="586">
                    <effect>
                        <Glow />
                    </effect>
                </MazeDisplayer>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Pane>
    </center>


    <bottom>
        <HBox prefHeight="5.0" prefWidth="808.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="809.0" text="Â© This project is one of the assignments in Advanced Topics in Programming course of BGU UNIVERSITY - Jun 2020." textAlignment="JUSTIFY" textFill="WHITE" textOverrun="CLIP" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
