<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane onKeyPressed="#KeyPressed" stylesheets="View.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.View">
    <left >
        <VBox prefHeight="299.0" prefWidth="171.0" spacing="5.0" BorderPane.alignment="CENTER" style="-fx-background-color: deepskyblue">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!--                  <Image url="resources/Images/player.png" />-->
                    </image>
                </ImageView>
                <GridPane prefHeight="210.0" prefWidth="201.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.0" minWidth="10.0" prefWidth="99.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="101.0" minWidth="10.0" prefWidth="101.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtfld_rowsNum" disable="false" text="10" GridPane.columnIndex="1"
                               GridPane.rowIndex="0"/>
                    <TextField fx:id="txtfld_columnsNum" disable="false" text="10" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                    <Button fx:id="btn_generateMaze" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0"
                            text="Generate Maze" GridPane.columnIndex="0" GridPane.columnSpan="2"
                            GridPane.rowIndex="2"/>
                    <Button fx:id="btn_solveMaze" cancelButton="true" onAction="#solveMaze" prefHeight="25.0"
                            prefWidth="167.0" text="Solve Maze" GridPane.columnIndex="0" GridPane.columnSpan="2"
                            GridPane.rowIndex="3"/>
                    <!--<Label GridPane.columnIndex="1" GridPane.rowIndex="4" text="${controller.characterPositionRow}" />-->
                    <!--<Label GridPane.columnIndex="1" GridPane.rowIndex="5" text="${controller.characterPositionColumn}"/>-->
                    <!--                    <ChoiceBox value="2 minutes" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="2 minutes" />
                                                    <String fx:value="5 minutes" />
                                                    <String fx:value="15 minutes" />
                                                </FXCollections>
                                            </items>
                                        </ChoiceBox>-->
                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </left>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New"/>
                                <MenuItem mnemonicParsing="false" text="Save"/>
                                <MenuItem mnemonicParsing="false" text="Load"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options"/>
                        <Menu mnemonicParsing="false" text="Exit"/>
                        <Menu mnemonicParsing="false" text="Help"/>
                        <Menu mnemonicParsing="false" text="About">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#About" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane BorderPane.alignment="CENTER" style="-fx-background-color: whitesmoke; -fx-border-color: black">
            <children>
                <MazeDisplayer style="-fx-border-color: black; -fx-border-width: 150; -fx-background-color: ghostwhite"
                               fx:id="mazeDisplayer" height="507.0" imageFileNameCharacter="resources/Images/player.png"
                               imageFileNameGoal="resources/Images/goal.png"
                               imageFileNameSolution="resources/Images/solution.png"
                               imageFileNameWall="resources/Images/border.png" layoutY="5.0"
                               onMouseClicked="#mouseClicked" width="586.0">
                    <effect>
                        <Glow/>
                    </effect>
                </MazeDisplayer>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </Pane>
    </center>
</BorderPane>
